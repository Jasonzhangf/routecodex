{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Anthropic Messages Response",
  "type": "object",
  "required": ["id", "type", "model", "content"],
  "additionalProperties": true,
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "message" },
    "model": { "type": "string" },
    "role": { "enum": ["assistant"] },
    "content": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "additionalProperties": true,
        "properties": {
          "type": { "type": "string" }
        }
      }
    },
    "stop_reason": { "type": ["string", "null"] },
    "usage": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenAI Responses Request",
  "type": "object",
  "required": ["model"],
  "additionalProperties": true,
  "properties": {
    "model": { "type": "string" },
    "input": {
      "type": "array",
      "items": { "type": "object" }
    },
    "instructions": { "type": ["string", "null"] },
    "tools": {
      "type": "array",
      "items": { "type": "object" }
    },
    "metadata": { "type": "object" },
    "response_format": { "type": ["string", "object"] }
  }
}

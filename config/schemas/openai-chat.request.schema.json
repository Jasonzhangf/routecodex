{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenAI Chat Request",
  "type": "object",
  "required": ["model", "messages"],
  "additionalProperties": true,
  "properties": {
    "model": {
      "type": "string",
      "minLength": 1
    },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["role"],
        "additionalProperties": true,
        "properties": {
          "role": {
            "enum": ["system", "user", "assistant", "tool"]
          },
          "content": {
            "anyOf": [
              { "type": "string" },
              { "type": "null" },
              {
                "type": "array",
                "items": { "type": "object" }
              }
            ]
          },
          "tool_calls": {
            "type": "array",
            "items": { "type": "object" }
          }
        }
      }
    },
    "tools": {
      "type": "array",
      "items": { "type": "object" }
    },
    "stream": { "type": "boolean" }
  }
}

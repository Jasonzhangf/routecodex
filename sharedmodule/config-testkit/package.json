{
  "name": "routecodex-config-testkit",
  "version": "0.1.0",
  "description": "RouteCodex Configuration Testing Framework - Black box testing and golden snapshot testing for configuration systems",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./blackbox": {
      "types": "./dist/blackbox.d.ts",
      "default": "./dist/blackbox.js"
    },
    "./golden": {
      "types": "./dist/golden.d.ts",
      "default": "./dist/golden.js"
    },
    "./performance": {
      "types": "./dist/performance.d.ts",
      "default": "./dist/performance.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --test test/**/*.test.js",
    "test:watch": "node --test --watch test/**/*.test.js",
    "test:blackbox": "node --test test/integration/blackbox.test.js",
    "test:golden": "node --test test/integration/golden.test.js",
    "test:performance": "node --test test/performance/benchmark.test.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src test",
    "format:check": "prettier --check src test",
    "snapshots:update": "node scripts/update-snapshots.mjs",
    "fixtures:validate": "node scripts/validate-fixtures.mjs"
  },
  "keywords": [
    "routecodex",
    "configuration",
    "testing",
    "blackbox",
    "golden-testing",
    "snapshot-testing",
    "performance",
    "validation"
  ],
  "author": "RouteCodex Team",
  "license": "MIT",
  "dependencies": {
    "routecodex-config-compat": "file:../config-compat",
    "routecodex-config-engine": "file:../config-engine",
    "ajv": "^8.12.0",
    "json-pointer": "^0.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/routecodex/routecodex.git",
    "directory": "sharedmodule/config-testkit"
  },
  "bugs": {
    "url": "https://github.com/routecodex/routecodex/issues"
  },
  "homepage": "https://github.com/routecodex/routecodex/tree/main/sharedmodule/config-testkit"
}

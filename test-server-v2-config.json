{
  "server": {
    "port": 5507,
    "host": "127.0.0.1",
    "cors": {
      "origin": "*",
      "credentials": true
    },
    "timeout": 30000,
    "bodyLimit": "10mb",
    "useV2": true
  },
  "logging": {
    "level": "debug",
    "enableConsole": true,
    "enableFile": false
  },
  "providers": {
    "test-provider": {
      "enabled": true,
      "models": {
        "gpt-3.5-turbo": {
          "maxTokens": 4096,
          "temperature": 0.7
        }
      }
    }
  },
  "v2Config": {
    "enableHooks": true,
    "enableMiddleware": true,
    "hookStages": [
      "server-entry",
      "server-pre-process",
      "server-post-process",
      "server-response",
      "server-final"
    ]
  }
}
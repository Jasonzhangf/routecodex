{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noEmitOnError": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
    "noEmitOnError": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/commands/offline-log.ts",
    "src/components/pipeline-visualizer.bak",
    "src/examples/pipeline-visualizer-example.tsx.bak",
    "src/components/EnhancedJsonViewer.tsx.bak",
    "src/components/EnhancedJsonViewer.css.bak",
    "src/examples/EnhancedJsonViewerExample.tsx.bak",
    "src/utils/message-truncator.ts.bak",
    "src/components/historical"
  ]
}

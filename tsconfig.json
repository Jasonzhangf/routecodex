{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noEmitOnError": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": false,
    "baseUrl": ".",
      "paths": {
        "rcc-llmswitch-core/api": [
          "sharedmodule/llmswitch-core/dist/api.d.ts"
        ],
        "rcc-llmswitch-core/guidance": [
          "sharedmodule/llmswitch-core/dist/guidance/index.d.ts"
        ],
        "rcc-llmswitch-core/v2": [
          "sharedmodule/llmswitch-core/dist/v2/index.d.ts"
        ],
        "rcc-llmswitch-core/v2/*": [
          "sharedmodule/llmswitch-core/dist/v2/*"
        ]
      }
  },
  "include": ["src/**/*"],
  "exclude": [
    "../sharedmodule/**/*",
    "sharedmodule/**/*",
    "node_modules",
    "dist",
    "tests",
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "src/commands/offline-log.ts",
    "src/components/pipeline-visualizer.bak",
    "src/examples/pipeline-visualizer-example.tsx.bak",
    "src/components/EnhancedJsonViewer.tsx.bak",
    "src/components/EnhancedJsonViewer.css.bak",
    "src/examples/EnhancedJsonViewerExample.tsx.bak",
    "src/utils/message-truncator.ts.bak",
    "src/components/historical",
    "src/migration/**/*",
    "src/core/request-handler.ts",
    "src/core/provider-manager.ts",
    "src/modules/hooks/**/*",
    "src/modules/pipeline/modules/provider/legacy/**/*",
    "src/server-v2/**/*",
    "src/server-v2/**",
    "src/modules/pipeline/v2/**/*",
    "src/modules/pipeline/modules/compatibility/glm-compatibility.ts",
    "src/server-factory.ts",
    "src/migration/version-selector.ts",
      ]
}

{
  "name": "rcc-basemodule",
  "version": "0.2.7",
  "description": "RCC BaseModule - Core framework for modular TypeScript development",
  "type": "module",
  "main": "dist/index.esm.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rcc/rcc-basemodule.git"
  },
  "homepage": "https://github.com/rcc/rcc-basemodule#readme",
  "bugs": {
    "url": "https://github.com/rcc/rcc-basemodule/issues"
  },
  "keywords": [
    "rcc",
    "basemodule",
    "module-framework",
    "typescript",
    "modular-architecture",
    "testing"
  ],
  "author": "RCC Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "rcc-debugcenter": ">=0.1.2",
    "rcc-underconstruction": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "rcc-debugcenter": {
      "optional": true
    },
    "rcc-underconstruction": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "typedoc": "0.25.13",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:esm": "rollup -c rollup.config.cjs",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__test__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__test__/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "docs:generate": "typedoc src --out docs --theme default",
    "docs:serve": "http-server docs -p 8080 -o",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "prepublishOnly": "npm run build",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/__test__"
    ],
    "testMatch": [
      "**/__test__/**/*.test.ts",
      "**/src/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__test__/**",
      "!src/**/index.ts"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 92,
        "lines": 90,
        "statements": 90
      }
    },
    "testTimeout": 30000
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "warn"
    },
    "env": {
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}

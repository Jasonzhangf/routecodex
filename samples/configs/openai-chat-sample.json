{
  "description": "RouteCodex demo config without embedded secrets",
  "httpserver": {
    "host": "127.0.0.1",
    "port": 5555
  },
  "virtualrouter": {
    "providers": {
      "demo.glm": {
        "providerType": "openai",
        "providerFamily": "glm",
        "protocol": "openai-chat",
        "baseUrl": "https://api.example.com/v1",
        "auth": {
          "type": "apikey",
          "env": "GLM_API_KEY"
        },
        "models": {
          "glm-4.6": {
            "supportsStreaming": true,
            "maxTokens": 4096,
            "profiles": ["glm-default"],
            "metadata": {
              "warmup": true
            }
          }
        }
      },
      "demo.c4m": {
        "providerType": "responses",
        "protocol": "openai-responses",
        "baseUrl": "https://api.codex-for.me/v1",
        "auth": {
          "type": "apikey",
          "env": "C4M_API_KEY"
        },
        "models": {
          "gpt-5.1": {
            "supportsStreaming": true,
            "maxTokens": 32768,
            "profiles": ["responses-default"]
          }
        },
        "responses": {
          "process": "passthrough",
          "streaming": "always"
        },
        "compatibilityProfile": "responses:c4m"
      }
    },
    "routing": {
      "default": ["demo.glm.glm-4.6"],
      "responses": ["demo.c4m.gpt-5.1"]
    }
  }
}
